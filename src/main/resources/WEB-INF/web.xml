<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>RESTfull CRUD</display-name>

    <servlet>
        <servlet-name>CRUDServletFile</servlet-name>
        <servlet-class>com.glushkov.http_crud.controller.FileController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CRUDServletFile</servlet-name>
        <url-pattern>/file</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CRUDServletEvent</servlet-name>
        <servlet-class>com.glushkov.http_crud.controller.EventController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CRUDServletEvent</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CRUDServletUser</servlet-name>
        <servlet-class>com.glushkov.http_crud.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CRUDServletUser</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
</web-app>